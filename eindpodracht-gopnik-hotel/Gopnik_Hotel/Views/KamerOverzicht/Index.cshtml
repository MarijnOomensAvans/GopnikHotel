@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<div class="page-header"></div>

<div class="row">
    @foreach (var k in Model)
    {

        <div class="col-md-3">
            <div class="well">
                <img class="card-img-top" src="@k.Afbeelding" alt="Card image" height="142" width="226">
                <div class="card-body">
                    <h4 class="card-title">@k.Naam</h4>
                    <p class="card-text">₽ @k.Prijs</p>
                    @Html.ActionLink("Boek nu!", "Index", "KamerBoeken", new { kamerID = k.KamerId }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>


